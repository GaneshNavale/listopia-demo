<!-- app/views/list_items/_quick_add_form.html.erb -->
<div data-controller="quick-add" class="space-y-4">
  <%= form_with model: [list, list_item], 
                data: { turbo_frame: "new_list_item", action: "turbo:submit-end->quick-add#reset" },
                class: "space-y-4" do |f| %>
    <div class="flex items-start space-x-4">
      <div class="flex-1">
        <%= f.text_field :title, 
                         placeholder: "Add a new item...", 
                         class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
                         data: { action: "keydown->quick-add#handleKeydown" } %>
      </div>
      <button type="submit" 
              class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-200 flex items-center font-medium">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add
      </button>
    </div>
    <!-- Expandable options -->
    <div data-quick-add-target="options" class="hidden space-y-4 p-4 bg-gray-50 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <%= f.label :item_type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :item_type, 
                       options_for_select([
                         ['Task', 'task'],
                         ['Note', 'note'],
                         ['Link', 'link'],
                         ['File', 'file'],
                         ['Reminder', 'reminder']
                       ], 'task'),
                       {},
                       { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        <div>
          <%= f.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :priority,
                       options_for_select([
                         ['Low', 'low'],
                         ['Medium', 'medium'],
                         ['High', 'high'],
                         ['Urgent', 'urgent']
                       ], 'medium'),
                       {},
                       { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        <div>
          <%= f.label :due_date, "Due Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.datetime_local_field :due_date,
                                     class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
      <div>
        <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description,
                        rows: 2,
                        placeholder: "Add more details...",
                        class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
    <!-- Toggle options button -->
    <div class="text-center">
      <button type="button" 
              data-action="click->quick-add#toggleOptions"
        class="text-sm text-gray-600 hover:text-gray-900 flex items-center space-x-1 mx-auto">
        <span data-quick-add-target="optionsText">More options</span>
        <svg data-quick-add-target="optionsIcon" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    </div>
  <% end %>
</div>