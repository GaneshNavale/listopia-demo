<!-- app/views/dashboard/_collaborated_lists.html.erb -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Shared with Me</h3>
  </div>
  <div class="p-4 space-y-3">
    <% if lists.any? %>
      <% lists.each do |list| %>
        <div class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:border-blue-300 transition-colors duration-200">
          <div class="flex-1 min-w-0">
            <%= link_to list, class: "text-sm font-medium text-gray-900 hover:text-blue-600 truncate block" do %>
              <%= list.title %>
            <% end %>
            <p class="text-xs text-gray-500 mt-1">by <%= list.owner.name %></p>
          </div>
          <%= list_status_badge(list) %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-6">
        <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <p class="text-sm text-gray-500">No shared lists yet</p>
      </div>
    <% end %>
  </div>
</div>
