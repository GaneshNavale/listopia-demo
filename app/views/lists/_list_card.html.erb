<!-- app/views/lists/_list_card.html.erb - Fix the list title link -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-all duration-200 group" 
     id="list_<%= list.id %>">
  <div class="p-6">
    <!-- Header -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1 min-w-0">
        <!-- Add data-turbo-frame="_top" to break out of the frame -->
        <%= link_to list, 
                    data: { turbo_frame: "_top" },
                    class: "text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200 truncate block" do %>
          <%= list.title %>
        <% end %>
        <% if list.description.present? %>
          <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= list.description %></p>
        <% end %>
      </div>
      <!-- Status Badge -->
      <div class="flex-shrink-0 ml-4">
        <%= list_status_badge(list) %>
      </div>
    </div>
    <!-- Progress -->
    <% stats = list_completion_stats(list) %>
    <div class="mb-4">
      <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
        <span><%= stats[:completed] %>/<%= stats[:total] %> completed</span>
        <span><%= stats[:percentage] %>%</span>
      </div>
      <%= progress_bar(stats[:percentage]) %>
    </div>
    <!-- Meta Info -->
    <div class="flex items-center justify-between text-sm text-gray-500">
      <div class="flex items-center space-x-4">
        <!-- Public/Private Status -->
        <% if list.is_public? %>
          <div class="flex items-center text-green-600">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-xs font-medium">Public</span>
          </div>
        <% else %>
          <div class="flex items-center text-gray-500">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span class="text-xs font-medium">Private</span>
          </div>
        <% end %>
        <!-- Collaboration indicator -->
        <% if list.list_collaborations.any? %>
          <div class="flex items-center text-gray-500">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="text-xs font-medium"><%= list.list_collaborations.count %></span>
          </div>
        <% end %>
        <!-- Updated date -->
        <span><%= time_ago_in_words_or_date(list.updated_at) %></span>
      </div>
      <!-- Quick Actions -->
      <div class="opacity-100 transition-opacity duration-200 flex space-x-2">
        <!-- Edit link -->
        <%= link_to edit_list_path(list), 
                    data: { turbo_frame: "_top" },
                    class: "text-gray-400 hover:text-blue-600 transition-colors duration-200",
                    title: "Edit list" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        
        <!-- Share link -->
        <%= link_to share_list_path(list), 
                    data: { turbo_frame: "modal" },
                    class: "text-gray-400 hover:text-green-600 transition-colors duration-200",
                    title: "Share list" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
          </svg>
        <% end %>
        
        <!-- Delete button (if you want it here) -->
        <%= button_to list_path(list),
                      method: :delete,
                      data: { 
                        turbo_confirm: "Are you sure? This will delete the list and all its items."
                      },
                      form: { class: "inline-block" },
                      class: "text-gray-400 hover:text-red-600 transition-colors duration-200 bg-transparent border-0 p-0 cursor-pointer",
                      title: "Delete list" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>