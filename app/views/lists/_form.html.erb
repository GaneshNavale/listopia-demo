<!-- app/views/lists/_form.html.erb -->
<%= form_with model: list, 
              data: { turbo: true },
              class: "space-y-6" do |f| %>
  <% if list.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 mb-2">Please fix the following errors:</h3>
      <ul class="text-sm text-red-700 space-y-1">
        <% list.errors.full_messages.each do |message| %>
          <li>â€¢ <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title, 
                     placeholder: "My awesome list...",
                     class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
  </div>
  
  <div>
    <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description,
                    rows: 3,
                    placeholder: "Describe what this list is for...",
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :status,
                   options_for_select([
                     ['Draft', 'draft'],
                     ['Active', 'active'],
                     ['Completed', 'completed'],
                     ['Archived', 'archived']
                   ], list.status),
                   {},
                   { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" } %>
    </div>
    <div>
      <%= f.label :color_theme, "Color Theme", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :color_theme,
                   options_for_select([
                     ['Blue', 'blue'],
                     ['Purple', 'purple'],
                     ['Green', 'green'],
                     ['Yellow', 'yellow'],
                     ['Red', 'red'],
                     ['Pink', 'pink']
                   ], list.color_theme || 'blue'),
                   {},
                   { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" } %>
    </div>
  </div>
  
  <div class="flex items-center">
    <%= f.check_box :is_public, 
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= f.label :is_public, "Make this list publicly viewable", 
                class: "ml-2 block text-sm text-gray-700" %>
  </div>
  
  <div class="flex items-center justify-between pt-6 border-t border-gray-200">
    <%= link_to list.persisted? ? list : lists_path, 
                class: "text-gray-600 hover:text-gray-900 font-medium" do %>
      Cancel
    <% end %>
    <div class="flex space-x-3">
      <% if list.persisted? %>
        <%= link_to list, 
                    method: :delete,
                    data: { confirm: "Are you sure? This action cannot be undone." },
                    class: "px-4 py-2 text-red-600 hover:text-red-800 font-medium" do %>
          Delete List
        <% end %>
      <% end %>
      <%= f.submit list.persisted? ? "Update List" : "Create List",
                   data: { turbo_frame: list.persisted? ? nil : "_top" },
                   class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-2 rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-200 font-medium" %>
    </div>
  </div>
<% end %>