<!-- app/views/shared/_list_card.html.erb -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-all duration-200 group" 
     id="list_<%= list.id %>">
  <div class="p-6">
    <!-- Header -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1 min-w-0">
        <%= link_to list, class: "text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200 truncate block" do %>
          <%= list.title %>
        <% end %>
        <% if list.description.present? %>
          <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= list.description %></p>
        <% end %>
      </div>
      <!-- Status Badge -->
      <div class="flex-shrink-0 ml-4">
        <%= list_status_badge(list) %>
      </div>
    </div>
    <!-- Progress -->
    <% stats = list_completion_stats(list) %>
    <div class="mb-4">
      <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
        <span><%= stats[:completed] %>/<%= stats[:total] %> completed</span>
        <span><%= stats[:percentage] %>%</span>
      </div>
      <%= progress_bar(stats[:percentage]) %>
    </div>
    <!-- Meta Info -->
    <div class="flex items-center justify-between text-sm text-gray-500">
      <div class="flex items-center space-x-4">
        <!-- Collaboration indicator -->
        <% if list.list_collaborations.any? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <%= list.list_collaborations.count %>
          </div>
        <% end %>
        <!-- Updated date -->
        <span><%= time_ago_in_words_or_date(list.updated_at) %></span>
      </div>
      <!-- Quick Actions -->
      <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex space-x-2">
        <% if can_access_list?(list, current_user, :edit) %>
          <%= link_to edit_list_path(list), class: "text-gray-400 hover:text-blue-600 transition-colors duration-200" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          <% end %>
          <%= link_to share_list_path(list), class: "text-gray-400 hover:text-green-600 transition-colors duration-200" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>