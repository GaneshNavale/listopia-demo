<!-- app/views/notifications/_list.html.erb -->
<% if notifications.any? %>
  <div class="divide-y divide-gray-200">
    <% notifications.each do |notification| %>
      <%= render "notifications/notification", notification: notification %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No notifications found</h3>
    <p class="text-gray-600">
      <% if params[:filter_read].present? || params[:filter_type].present? || params[:filter_date].present? %>
        Try adjusting your filters to see more notifications.
      <% else %>
        You'll see notifications here when people interact with your lists.
      <% end %>
    </p>
  </div>
<% end %>